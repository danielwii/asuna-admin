{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "pretty": true,
//    "noUnusedLocals": true,
//    "noUnusedParameters": true,
    "strictNullChecks": true, // 可选参数会被自动地加上 | undefined
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": [
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "examples",
    "dist",
    ".next",
    "stories"
  ]
}
